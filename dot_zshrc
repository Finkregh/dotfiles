_zinit_update() {
    zinit self-update
    zinit update --parallel 40
}

if [ ! -e /tmp/zinit-update-timer ] ; then
    touch /tmp/zinit-update-timer
    _zinit_update
fi
if test $(find /tmp/zinit-update-timer -mtime +1); then
    _zinit_update
    touch /tmp/zinit-update-timer
fi

